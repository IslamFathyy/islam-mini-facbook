<!-- Button trigger modal -->
@model Facbook.Models.Posts


<div class="modal" id="modalSubscriptionFormwd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">DELETE</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">

                <h3>Are you sure you want to delete this?</h3>
                <div>
         
                    <hr />
                    <dl class="row">
                       
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PostBody)
                        </dd>
               
                   
                    </dl>

                    <form asp-action="Delete">
                        @*<input type="hidden" asp-for="PostsId" />*@
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                   
                    </form>
                </div>






            </div>

        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
