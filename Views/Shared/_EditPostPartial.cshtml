<!-- Button trigger modal -->
@model Facbook.Models.Posts


<div class="modal" id="modalSubscriptionFormwe" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">EDIT</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">

                @using (Html.BeginForm("Edit", "Posts", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="PostsId" />
                                <div class="form-group">
                                    <label asp-for="PostBody" class="control-label"></label>
                                    <input asp-for="PostBody" class="form-control" />
                                    <span asp-validation-for="PostBody" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PostDate" class="control-label"></label>
                                    <input asp-for="PostDate" class="form-control" />
                                    <span asp-validation-for="PostDate" class="text-danger"></span>
                                </div>
                        
                           
                             

                                <div class="form-group">
                                    @foreach (var photo in Model.Attachment)
                                    {
                                        <img src="~/Images/@photo.Url" style="width:20px; height:20px; " alt="Not Found" />

                                    }
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>

                            </form>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
