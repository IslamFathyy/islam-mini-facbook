
@model IEnumerable<Applicationroles>
@{
    ViewData["Title"] = "View ALl Roles";
}
<a class="btn btn-primary" style="width:auto" asp-controller="admin" asp-action="CreateRole"> Add New Role</a>
@if (Model.Any())
{

    foreach (var role in Model)
    {

        <div class="card mb-3">
            <div class="card-header">
                Role ID:@role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title"> @role.Name</h5>
            </div>
            <div class="card-footer">
                <a  class="btn btn-primary" asp-controller="admin" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                <a href="#" class=" btn btn-danger">Delete</a>

            </div>
        </div>
    }

}
else
{

    <div class="card">
        <div class="card-header">
            No Roles created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title"> Create A new Role</h5>

        </div>
    </div>

}

